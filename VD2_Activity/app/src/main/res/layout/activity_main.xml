<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <Button
        android:id="@+id/btnMoNhapLieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MỞ MÀN HÌNH NHẬP LIỆU"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="DỮ LIỆU NHẬN TỪ ACTIVITY NHẬP LIỆU"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ và Tên nhận được"
        android:focusable="false"
        android:background="#D79999"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/edtNamSinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Năm sinh nhận được"
        android:focusable="false"
        android:background="#977979"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp" />
</LinearLayout>
